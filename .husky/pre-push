. "$(dirname -- "$0")/utils.sh"

# Define colors for better visibility
YELLOW='\033[1;33m'
RED='\033[0;31m'
GREEN='\033[0;32m'
RESET='\033[0m'

# Setup Node.js environment
setup_node_environment || {
  echo -e "${RED}‚ùå Pre-push checks cannot run without Node.js${RESET}"
  echo -e "${YELLOW}‚ö†Ô∏è  Please install Node.js or set up NVM before pushing${RESET}"
  exit 1
}

# Setup project paths
setup_project_paths

# Check configuration settings
CONFIG_CHECK=$(load_config "pre-push")

if [ "$CONFIG_CHECK" = "disabled" ]; then
  echo -e "${YELLOW}‚ö†Ô∏è  Tests before push are disabled in config${RESET}"
  exit 0
fi

# Run tests before pushing
echo -e "${GREEN}üîç Running tests before push...${RESET}"

# Run unit tests if enabled - using POSIX-compliant pattern matching
if echo "$CONFIG_CHECK" | grep -q "unit"; then
  echo -e "${GREEN}üîç Running unit tests...${RESET}"
  check_command "jest" "Jest not found" && npm run test:unit || exit 1
else
  echo -e "${YELLOW}‚ÑπÔ∏è Unit tests skipped (disabled in config)${RESET}"
fi

# Run E2E tests if enabled - using POSIX-compliant pattern matching
if echo "$CONFIG_CHECK" | grep -q "e2e"; then
  echo -e "${GREEN}üîç Running E2E tests...${RESET}"
  check_command "playwright" "Playwright not found" && npm run test:e2e || exit 1
else
  echo -e "${YELLOW}‚ÑπÔ∏è E2E tests skipped (disabled in config)${RESET}"
fi

echo -e "${GREEN}‚úì All tests passed!${RESET}"
